<h1 class="detail-header">Snack Details</h1>

<div class="container-fluid ">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-center">
            <div>
            <div class="card mb-3">
                <img src="<%= snack.dataValues.imgUrl %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%= snack.dataValues.name %></h5>
                    <p class="card-text"><%= snack.dataValues.description %> </p>
                </div>
            </div>
            <form action="/comment/<%= snack.dataValues.id %>" method="POST">
                <div>
                <textarea name="text" id="text" style="width: 100%;">Please insert fighting words...</textarea>
                </div>
                <button type="submit">Post Comment</button>
            </form>
            </div>
            </div>
        </div>
    </div>
</form>

<%snack.comments.forEach(comment => { %>
    <ul>
        <li><%=comment.text%></li>
    </ul>
<% }) %>
