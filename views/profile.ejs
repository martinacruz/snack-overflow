<body class="profile-page">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="page-header" >
          <h1 class="profile-header">Welcome to your Snack Profile</h1>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
          <div class="card" class="profile-card">
            <h5 class="card-header" class="profile-card-header">
              Hey there, <%= currentUser.dataValues.name %> 
            </h5>
            <div class="card-body" class="profile-card-body">
              <p class="card-text" class="profile-card-text">
                User Content
              </p>
            </div>
            <div class="card-footer" class="profile-card-footer">
              <a href="/snack"> <p>Add a Snack</p></a>
            </div>
          </div>
        </div>
        <div class="col-md-4">
        </div>
      </div>
      <div class="row">
            <h3 id="profile-subheader">
              What is your snack wisdom?
            </h3>
      </div>
      <div class ="row" class="card-deck" >
        <% snacks.forEach((snack, idx) => { %>
          <div class="col-md-4" id="wrapper" >
            <div class="card">
              <img class="card-img-top" src="<%= snack.imgUrl  %>" alt = "snack picture" >
            </h5>
            <div class="card-body" >
              <p class="card-text" >
                <p class="profile-snack-header"> <%= snack.name %></p>
                </p>
              </div>
              <div class="card-footer" >
                <div class = "container-fluid">
                  <a href="/detail/ <%= snack.id  %> ">View Snack</a>
                </div> 
                <form method="POST" action="/profile/<%= snack.id %>?_method=DELETE%>">
                  <input type="hidden" value="Delete" name="name"> 
                  <button type="submit">Gross</button>
                </form>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
</body>  
    